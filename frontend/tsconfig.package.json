{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "plugins": [],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext"
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "generated/**/*.ts",
    "generated/**/*.tsx",
    "hooks/useEditor.ts",
    "hooks/useRun.tsx",
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}